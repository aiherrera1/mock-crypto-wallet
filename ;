  <div class="card-header">
    <h3>{{ symbol }}</h3>
  </div>
  <div class="card-body">
    <p>Price: {{ price }} USD Profit: {{ gains }} USD</p>
    @if (ableToBuy) {
      <input
        type="number"
        id="buyQuantity"
        name="buyQuantity"
        [(ngModel)]="buyQuantity"
      />
      <button (click)="handleBuy()">Buy</button>
    }
    @if (shares > 0 && ableToBuy) {
      <input
        type="number"
        id="sellQuantity"
        name="sellQuantity"
        [(ngModel)]="sellQuantity"
      />
      <button (click)="handleSell()">Sell</button>
    }
    <p>Shares: {{ shares }}</p>
  </div>
</div>
